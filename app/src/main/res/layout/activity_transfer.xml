                    android:text="@string/app_transfer_form_remarks"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_small" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_remarks"
