<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/component_black_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_big_20"
                android:paddingRight="@dimen/space_big_20"
                android:paddingTop="@dimen/space_big_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_big_30">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/space"
                            android:text="@string/app_transfer_service_name"
                            android:textColor="@color/font_title"
                            android:textSize="@dimen/font_big" />

                        <TextView
                            android:id="@+id/tv_service_introduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_transfer_service_introduce"
                            android:textColor="@color/font_hint"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/font_big_30" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_selecter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space"
                    android:text="@string/app_transfer_selecter"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_big_25">

                    <TextView
                        android:id="@+id/tv_series"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_big_40"
                        android:background="@drawable/shape_theme_corners_30"
                        android:gravity="center"
                        android:paddingLeft="@dimen/space_big_20"
                        android:paddingRight="@dimen/space_big_20"
                        android:text="@string/app_transfer_series"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_15" />

                    <TextView
                        android:id="@+id/tv_model"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/space_big_40"
