                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img_banner"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_fengexian2"
                android:background="@color/theme_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_big_20"
                android:paddingRight="@dimen/space_big_20"
                android:paddingTop="@dimen/space_big_20">

                <TextView
                    android:id="@+id/tv_form_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space"
                    android:text="@string/app_transfer_form_type"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_small" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space_big_25">

                    <RadioButton
                        android:id="@+id/rb_type_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_rb_theme_frame"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="@dimen/space_little_big"
                        android:paddingLeft="@dimen/space_big_20"
                        android:paddingRight="@dimen/space_big_20"
                        android:paddingTop="@dimen/space_little_big"
                        android:text="@string/app_transfer_form_type_name_01"
                        android:textColor="@drawable/selector_color_theme_white"
                        android:textSize="@dimen/font_15" />

                    <View
                        android:layout_width="@dimen/space"
                        android:layout_height="0dp" />

                    <RadioButton
                        android:id="@+id/rb_type_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_rb_theme_frame"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingBottom="@dimen/space_little_big"
                        android:paddingLeft="@dimen/space_big_20"
                        android:paddingRight="@dimen/space_big_20"
                        android:paddingTop="@dimen/space_little_big"
                        android:text="@string/app_transfer_form_type_name_02"
                        android:textColor="@drawable/selector_color_theme_white"
                        android:textSize="@dimen/font_15" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_form_flight_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_big_40"
                    android:layout_marginBottom="@dimen/space"
                    android:background="@drawable/shape_theme_noradius"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_big_20"
                    android:paddingRight="@dimen/space_big_20">

                    <TextView
                        android:id="@+id/tv_form_flight_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_transfer_form_flight_date"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/font_small" />

                    <ImageView
                        android:id="@+id/iv_qifei_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_icon_down_li" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_form_flight_date_prompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/space"
                        android:text="@string/app_transfer_prompt_input"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_form_flight_number"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_big_40"
                        android:layout_weight="1"
                        android:background="@drawable/shape_theme_noradius"
                        android:hint="@string/app_transfer_form_flight_number"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:paddingLeft="@dimen/space_big_20"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/theme_color"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="@dimen/space"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/ll_form_time"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_big_40"
                        android:layout_weight="1"
                        android:background="@drawable/shape_theme_noradius"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/space_big_20"
                        android:paddingRight="@dimen/space_big_20">

                        <TextView
                            android:id="@+id/tv_form_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="start"
                            android:singleLine="true"
                            android:text="@string/app_transfer_form_time"
                            android:textColor="@color/theme_color"
                            android:textSize="@dimen/font_small" />

                        <ImageView
                            android:id="@+id/iv_shangche_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_icon_down_li" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_form_flight_number_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_form_flight_number_prompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/space"
                        android:text="@string/app_transfer_prompt_input"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_form_time_prompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/space"
                        android:text="@string/app_transfer_prompt_input"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_form_destination"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_big_40"
                    android:layout_marginBottom="@dimen/space"
                    android:background="@drawable/shape_theme_noradius"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_big_20"
                    android:paddingRight="@dimen/space_big_20">

                    <TextView
                        android:id="@+id/tv_form_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_transfer_form_destination"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/font_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_form_destination_prompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/space"
                        android:text="@string/app_transfer_prompt_input"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_form_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_big_40"
                        android:layout_weight="1"
                        android:background="@drawable/shape_theme_noradius"
                        android:hint="@string/app_transfer_form_name"
                        android:paddingLeft="@dimen/space_big_20"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/theme_color"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="@dimen/space"
                        android:layout_height="0dp" />

                    <EditText
                        android:id="@+id/et_form_phone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/space_big_40"
                        android:layout_weight="1"
                        android:background="@drawable/shape_theme_noradius"
                        android:hint="@string/app_transfer_form_phone"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="@dimen/space_big_20"
                        android:textColor="@color/theme_color"
                        android:textColorHint="@color/theme_color"
                        android:textSize="@dimen/font_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_name_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_name_prompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/space"
                        android:text="@string/app_transfer_prompt_input"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tv_phone_prompt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/space"
                        android:text="@string/app_transfer_prompt_input"
                        android:textColor="@color/red"
                        android:textSize="@dimen/font_10"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_form_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space"
