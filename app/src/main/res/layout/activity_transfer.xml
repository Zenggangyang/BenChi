                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/font_15" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_model_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space"
                    android:text="@string/app_transfer_model_introduce"
                    android:textColor="@color/font_hint"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    android:layout_marginBottom="@dimen/space"
                    android:background="@drawable/img_line_border"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_parameter_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_parameter_name_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:text="@string/app_transfer_model_price"
                                android:textColor="@color/font_text"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_parameter_value_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_parameter_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="@dimen/space_fengexian1"
                            android:layout_height="@dimen/space"
                            android:background="@color/theme_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_parameter_name_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:text="@string/app_transfer_model_price"
                                android:textColor="@color/font_text"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_parameter_value_02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_parameter_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="@dimen/space_fengexian1"
                            android:layout_height="@dimen/space"
                            android:background="@color/theme_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_parameter_name_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:text="@string/app_transfer_model_mileage"
                                android:textColor="@color/font_text"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_parameter_value_03"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_parameter_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="@dimen/space_fengexian1"
                            android:layout_height="@dimen/space"
                            android:background="@color/theme_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_parameter_name_04"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:text="@string/app_transfer_model_number"
                                android:textColor="@color/font_text"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_parameter_value_04"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/theme_color"
                                android:textSize="@dimen/font_10" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- <com.soowin.staremblem.utils.myView.MyGridView
                     android:id="@+id/gv_info"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:horizontalSpacing="@dimen/space"
                     android:numColumns="3"
                     android:paddingBottom="@dimen/space"
                     android:verticalSpacing="@dimen/space" />-->

                <!-- <LinearLayout
                     android:id="@+id/ll_info"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingBottom="@dimen/space">-->

                <ImageView
                    android:id="@+id/iv_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <!--</LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/space"
                    android:paddingTop="@dimen/space_big">

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_transfer_time"
                        android:textColor="@color/font_hint"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/tv_time_parameter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/space_little"
                        android:text="@string/app_transfer_time_parameter"
                        android:textColor="@color/font_text"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
