<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.soowin.staremblem.ui.index.activity.AddressActivity">

    <include layout="@layout/include_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/space">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_corners_5"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_address_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space"
                android:layout_marginRight="@dimen/space"
                android:src="@drawable/img_icon_search" />

            <EditText
                android:id="@+id/et_address_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_big_15"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/app_address_search"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNone"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:id="@+id/iv_address_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/space"
                android:src="@drawable/img_search_close" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_theme_corners_5"
            android:padding="@dimen/space"
            android:text="@string/app_address_sure"
            android:textColor="@color/white"
            android:textSize="@dimen/font_15" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" />


</LinearLayout>
