                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="22">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_order_stroke_three_solid"
                    android:layout_weight="198">

                    <TextView
                        android:id="@+id/tv_paidan_complete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/app_order_send_finish" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:background="@drawable/shape_order_stroke_three_solid"
                    android:layout_height="match_parent"
                    android:layout_weight="198">

                    <TextView
                        android:id="@+id/tv_order_complete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/app_order_completion" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
