<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical" android:layout_height="@dimen/title_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/font_title"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/top_back_ly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
           >

            <ImageView
                android:id="@+id/iv_top_back"
                android:layout_marginLeft="@dimen/space_big"

                android:layout_width="@dimen/font_16"
                android:layout_height="@dimen/font_16"
             />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="标题"
            android:textSize="@dimen/font_16"
            android:textColor="@color/white" />

    </RelativeLayout>



</LinearLayout>